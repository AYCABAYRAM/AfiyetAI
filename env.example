# AfiyetAI Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun

# ===== API Configuration =====
SPOONACULAR_API_KEY=your-spoonacular-api-key-here
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key-here

# Raf ömrü API (resolver kullanır)
SHELF_LIFE_API_BASE_URL=https://your-shelf-life-api.com

# ===== Application Settings =====
DEBUG=False
LOG_LEVEL=INFO
APP_LOCALE=tr-TR

# OCR / Tesseract
OCR_LANG=tur+eng
TESSERACT_CMD=  # Boş bırakılırsa sistem PATH'ini kullanır

# ===== Database =====
# PostgreSQL için: postgresql://user:password@host:5432/dbname
# SQLite için: sqlite:///afiyet_dev.db
DATABASE_URL=postgresql://afiyetai:afiyetai_password@db:5432/afiyetai

# SQLite fallback (DATABASE_URL PostgreSQL değilse kullanılır)
SQLITE_DATABASE=users.db

# ===== Network (genel) =====
HTTP_TIMEOUT_DEFAULT=8
HTTP_RETRIES_DEFAULT=2

# ===== File Paths (opsiyonel / geriye dönük uyumluluk) =====
SHELF_LIFE_CSV_PATH=data/raf_omru.csv
PRODUCT_DICTIONARY_PATH=data/product_dictionary.json
TURKISH_ENGLISH_TRANSLATION_PATH=data/turkish_english_translation.json

# ===== Flask Ayarları =====
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
SECRET_KEY=your-secret-key-here-change-this-in-production

# ===== Session Settings =====
SESSION_LIFETIME=3600  # 1 saat (saniye cinsinden)
SESSION_COOKIE_SECURE=True  # Production'da True olmalı (HTTPS)
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ===== Dosya Yükleme =====
MAX_FILE_SIZE=16777216  # 16MB (bytes cinsinden)
UPLOAD_FOLDER=uploads

# ===== Rate Limiting =====
MAX_UPLOADS_PER_HOUR=10
